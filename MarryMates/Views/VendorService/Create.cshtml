@model VendorService

@{
    ViewData["Title"] = "Create Vendor Service";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="card p-4 shadow-sm">
            <h5 class="mb-4">Enter Vendor Service Details</h5>

            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" placeholder="Enter service name" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorId" class="control-label"></label>
                <input asp-for="VendorId" class="form-control" placeholder="Enter VendorId" />
                <span asp-validation-for="VendorId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter service description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Enter service price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                @* <input type="submit" value="Create" class="btn btn-primary" /> *@
                <button type="submit" class="btn btn-success btn-lg">Create</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}