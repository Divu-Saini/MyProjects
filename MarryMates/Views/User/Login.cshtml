@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow" style="border-radius: 10px; border: 1px solid #ddd;">
                <div class="card-header text-center" style="background-color: #007bff; color: white; font-size: 1.5rem; font-weight: bold;">
                    WELCOME TO MARRYMATES
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <form method="post" asp-action="Login">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label" style="font-weight: 600;">Email</label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   placeholder="Enter your email"
                                   style="padding: 10px; border: 1px solid #ccc; border-radius: 5px;"
                                   required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label" style="font-weight: 600;">Password</label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="password"
                                   placeholder="Enter your password"
                                   style="padding: 10px; border: 1px solid #ccc; border-radius: 5px;"
                                   required />
                        </div>
                        <div style="text-align: center; margin-top: 20px;">
                            <button type="submit"
                                    class="btn btn-primary btn-lg"
                                    style="width: 100%; padding: 10px; background-color: #007bff; border: none; font-size: 1.2rem;">
                                Login
                            </button>
                        </div>
                    </form>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center" style="margin-top: 15px; font-size: 0.9rem; color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; padding: 10px;">
                            @ViewBag.Error
                        </div>
                    }
                </div>
                <div class="card-footer text-center" style="background-color: #f9f9f9; border-top: 1px solid #ddd; padding: 10px;">
                    <p style="margin: 0; font-size: 0.9rem;">Don't have an account? <a href="http://localhost:5081/User/Create" style="color: #007bff; text-decoration: none;">Register here</a></p>
                    <p style="margin: 5px 0 0; font-size: 0.9rem;"><a href="/User/ForgotPassword" style="color: #6c757d; text-decoration: none;">Forgot Password?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
