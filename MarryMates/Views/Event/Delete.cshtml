@model MarryMatesDotNet.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this event?</strong>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>Event ID</dt>
        <dd>@Model.EventId</dd>

        <dt>Client</dt>
        <dd>@Model.Client.Name</dd>

        <dt>Vendor</dt>
        <dd>@Model.Vendor.Name</dd>

        <dt>Venue</dt>
        <dd>@Model.Venue.VenueName</dd>

        <dt>Event Date</dt>
        <dd>@Model.EventDate.ToString("d")</dd>

        <dt>Total Price</dt>
        <dd>@Model.TotalPrice.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
