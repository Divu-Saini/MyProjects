@model MarryMatesDotNet.Models.User

<div style="margin: 50px auto; max-width: 600px; padding: 20px; border: 1px solid #ddd; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; margin-bottom: 20px; font-size: 1.8rem; font-weight: bold; color: #007bff;">Register To Explore</h2>
    <form asp-action="Create" method="post">
        <div style="margin-bottom: 20px;">
            <label asp-for="Name" style="display: block; margin-bottom: 5px; font-weight: bold; color: #333;">Name</label>
            <input asp-for="Name"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;"
                   placeholder="Enter name"
                   required />
            <span asp-validation-for="Name" style="color: red; font-size: 0.9rem;"></span>
        </div>

        <div style="margin-bottom: 20px;">
            <label asp-for="Email" style="display: block; margin-bottom: 5px; font-weight: bold; color: #333;">Email</label>
            <input asp-for="Email"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;"
                   placeholder="Enter email"
                   type="email"
                   required />
            <span asp-validation-for="Email" style="color: red; font-size: 0.9rem;"></span>
        </div>

        <div style="margin-bottom: 20px;">
            <label asp-for="PasswordHash" style="display: block; margin-bottom: 5px; font-weight: bold; color: #333;">Password</label>
            <input asp-for="PasswordHash"
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;"
                   placeholder="Enter password"
                   type="password"
                   required />
            <span asp-validation-for="PasswordHash" style="color: red; font-size: 0.9rem;"></span>
        </div>

        <div style="margin-bottom: 20px;">
            <label asp-for="Role" style="display: block; margin-bottom: 5px; font-weight: bold; color: #333;">Role</label>
            <select asp-for="Role"
                    style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;"
                    required>
                @* <option value="Admin">Admin</option> *@
                <option value="Client">Client</option>
                <option value="Vendor">Vendor</option>
            </select>
            <span asp-validation-for="Role" style="color: red; font-size: 0.9rem;"></span>
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <button type="submit"
                    style="background-color: #007bff; color: white; border: none; padding: 12px 20px; font-size: 1.2rem; border-radius: 5px; cursor: pointer; width: 100%; font-weight: bold;">
                Create
            </button>
        </div>
    </form>
</div>
