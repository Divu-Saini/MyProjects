@model MarryMatesDotNet.Models.User

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete User</h2>
    <div class="alert alert-warning" role="alert">
        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
    </div>

    <div class="card p-4 shadow-sm">
        <h5>User Details</h5>
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>
